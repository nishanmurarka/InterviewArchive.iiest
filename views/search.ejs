<h1 class="pb-4">Search Results</h1>

<div class="g-2 g-lg-3">
  <% if(recipe != '') { %>
    <% recipe.forEach(function(eachrecipe,index) { %>
      <div class="row category_link_new">
        <div class="col-4"> <%- eachrecipe.name %></div>
        <div class="col-6"> <%- eachrecipe.email %> </div>
        <div class="col-2">
          <a href="/project/<%- recipe.id %>/view"><i style="font-size: x-large"; class="bi bi-eye-fill"></i></a>
          <span>|</span>
          <a href="/project/<%- recipe.id %>/download"><i style="font-size: x-large"; class="bi bi-file-earmark-arrow-down-fill"></i></a>
        </div>
      </div>
    <%}) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>